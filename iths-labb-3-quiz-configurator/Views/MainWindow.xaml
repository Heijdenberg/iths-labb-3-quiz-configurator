<Window x:Class="iths_labb_3_quiz_configurator.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:iths_labb_3_quiz_configurator.Views"
        xmlns:userControls="clr-namespace:iths_labb_3_quiz_configurator.Views.UserControls"
        mc:Ignorable="d"
        Title="Quiz Configurator"
        Icon="/Resources/quiz.ico"
        WindowState="{Binding WindowState}"
        Height="450"
        Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <ContentControl Grid.Row="0"
                        Content="{Binding MenuViewModel}" />
        <ContentControl Grid.Row="1"
                        Content="{Binding ActiveView}" />
        <StatusBar Grid.Row="2"
                   VerticalAlignment="Bottom">
            <StatusBarItem Content="{Binding UserMessage}" />
        </StatusBar>
    </Grid>
</Window>
