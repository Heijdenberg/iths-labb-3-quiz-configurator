<Window x:Class="iths_labb_3_quiz_configurator.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:iths_labb_3_quiz_configurator.Views"
        xmlns:userControls="clr-namespace:iths_labb_3_quiz_configurator.Views.UserControls"
        mc:Ignorable="d"
        Title="Quiz Configurator"
        Icon="/Resources/quiz.ico"
        WindowState="{Binding WindowState}"
        Height="450"
        Width="800">
    <Window.InputBindings>
        <KeyBinding Key="Insert"
                    Command="{Binding MenuViewModel.AddQuestionCommand}" />
        <KeyBinding Key="Delete"
                    Command="{Binding MenuViewModel.RemoveQuestionCommand}" />
        <KeyBinding Modifiers="Ctrl"
                    Key="O"
                    Command="{Binding MenuViewModel.PackSettingsCommand}" />
        <KeyBinding Modifiers="Ctrl"
                    Key="P"
                    Command="{Binding MenuViewModel.ShowPlayerCommand}" />
        <KeyBinding Modifiers="Ctrl"
                    Key="E"
                    Command="{Binding MenuViewModel.ShowConfigurationCommand}" />
        <KeyBinding Modifiers="Ctrl"
                    Key="S"
                    Command="{Binding MenuViewModel.SaveCommand}" />
        <KeyBinding Modifiers="Ctrl"
                    Key="N"
                    Command="{Binding MenuViewModel.OpenNewPackDialogCommand}" />
        <KeyBinding Modifiers="Ctrl"
                    Key="I"
                    Command="{Binding MenuViewModel.OpenImportPackDialogCommand}" />
        <KeyBinding Modifiers="Ctrl"
                    Key="Enter"
                    Command="{Binding MenuViewModel.ToggleMaximizeCommand}" />
    </Window.InputBindings>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <ContentControl Grid.Row="0"
                        Content="{Binding MenuViewModel}" />
        <ContentControl Grid.Row="1"
                        Content="{Binding ActiveView}" />
        <StatusBar Grid.Row="2"
                   VerticalAlignment="Bottom">
            <StatusBarItem Content="{Binding UserMessage}" />
        </StatusBar>
    </Grid>
</Window>
