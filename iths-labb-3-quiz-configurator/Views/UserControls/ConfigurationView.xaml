<UserControl x:Class="iths_labb_3_quiz_configurator.Views.UserControls.ConfigurationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:iths_labb_3_quiz_configurator.Views.UserControls"
             xmlns:vm="clr-namespace:iths_labb_3_quiz_configurator.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=vm:ConfigurationViewModel, IsDesignTimeCreatable=False}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <DockPanel Grid.Row="0">
                <Label DockPanel.Dock="Left" Content="{Binding ActivePack.Name}" />
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                    <StackPanel.Resources>
                        <Style TargetType="Button">
                            <Setter Property="Margin"
                                    Value="5" />
                            <Setter Property="HorizontalAlignment"
                                    Value="Center" />
                            <Setter Property="VerticalAlignment"
                                    Value="Center" />
                        </Style>
                    </StackPanel.Resources>
                    <Button Content="O"
                            Command="{Binding PackSettingsCommand}"/>
                    <Button Content="+"
                            Command="{Binding AddQuestionCommand}" />
                    <Button Content="-"
                            Command="{Binding RemoveQuestionCommand}" />
                </StackPanel>
                <Label />
            </DockPanel>
            <ListBox Grid.Row="1" ItemsSource="{Binding ActivePack.Questions}"
                     Margin="0 0 0 5"
                     DisplayMemberPath="Query"
                     SelectedItem="{Binding ActiveQuestion}" />
        </Grid>
        <StackPanel Grid.Column="1" Margin="20">
            <Label Content="Question:" />
            <TextBox Text="{Binding ActiveQuestion.Query, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0 0 0 20"
                     MinLines="5"
                     TextWrapping="Wrap"/>
            <Label Content="Corrext Answer:" />
            <TextBox Text="{Binding ActiveQuestion.CorrectAnswer, UpdateSourceTrigger=PropertyChanged}" />
            <Label Content="First Incorrect Answer:" />
            <TextBox Text="{Binding ActiveQuestion.IncorrectAnswer1, UpdateSourceTrigger=PropertyChanged}" />
            <Label Content="Secound Incorrect Answer:" />
            <TextBox Text="{Binding ActiveQuestion.IncorrectAnswer2, UpdateSourceTrigger=PropertyChanged}" />
            <Label Content="Third Incorrect Answer:" />
            <TextBox Text="{Binding ActiveQuestion.IncorrectAnswer3, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>
    </Grid>
</UserControl>
