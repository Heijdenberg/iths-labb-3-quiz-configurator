<UserControl x:Class="iths_labb_3_quiz_configurator.Views.UserControls.Menu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:iths_labb_3_quiz_configurator.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DockPanel Grid.Row="0">
            <Menu DockPanel.Dock="Left">
                <MenuItem Header="_File">
                    <MenuItem Icon="➕"
                              Command="{Binding OpenNewPackDialogCommand}"
                              Header="New Question Pack" />
                    <MenuItem Icon="💾"
                              Command="{Binding SaveCommand}"
                              Header="Save Packs" />
                    <MenuItem Icon="📚"
                              ItemsSource="{Binding Packs}"
                              Header="Select Question Pack">
                        <MenuItem.ItemContainerStyle>
                            <Style TargetType="MenuItem">
                                <Setter Property="Header"
                                        Value="{Binding Name}" />
                                <Setter Property="Command"
                                        Value="{Binding DataContext.CahngeActivePackCommand,
                                    RelativeSource={RelativeSource AncestorType=Menu}}" />
                                <Setter Property="CommandParameter"
                                        Value="{Binding}" />
                            </Style>
                        </MenuItem.ItemContainerStyle>
                    </MenuItem>
                    <MenuItem Icon="➖"
                              Command="{Binding RemovePackCommand}"
                              Header="Delete Question Pack"/>
                    <Separator />
                    <MenuItem Icon="📥"
                              Header="Import Questions"
                              Command="{Binding OpenImportPackDialogCommand}"
                              InputGestureText="Alt+F4" />
                    <Separator />
                    <MenuItem Icon="❌"
                              Header="Exit"
                              InputGestureText="Ctrl+I"
                              Command="{Binding ExitCommand}" />
                </MenuItem>
                <MenuItem Header="_Edit">
                    <MenuItem Icon="➕"
                              Header="Add Question"
                              InputGestureText="Insert"
                              Command="{Binding AddQuestionCommand}" />
                    <MenuItem Icon="➖"
                              Header="Remove Question"
                              InputGestureText="DEL"
                              Command="{Binding RemoveQuestionCommand}" />
                    <MenuItem Icon="⚙️"
                              Header="Pack Options"
                              InputGestureText="Ctrl+O"
                              Command="{Binding PackSettingsCommand}" />
                </MenuItem>
                <MenuItem Header="_View">
                    <MenuItem Icon="⏵"
                              Header="Play"
                              Command="{Binding ShowPlayerCommand}"
                              InputGestureText="Ctrl+P" />
                    <MenuItem Icon="⚙️"
                              Header="Edit"
                              Command="{Binding ShowConfigurationCommand}"
                              InputGestureText="Ctrl+E" />
                    <Separator />
                    <MenuItem Icon="⛶"
                              Header="Fillscreen"
                              InputGestureText="Ctrl+Enter"
                              Command="{Binding ToggleMaximizeCommand}"/>
                </MenuItem>
            </Menu>
        </DockPanel>
    </Grid>
</UserControl>
